@{
    ViewData["Title"] = "Electrical Health Checkup Report";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}

<style>


    /*     .form-container {
                max-width: 1200px;
                margin: auto;
            } */

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .info-table th, td {
        border: 1px solid #000;
        padding: 8px;
      
    }

    .audit-table th, .audit-table td {
        border: 1px solid #000;
        padding: 8px;
        text-align: left;
    }

    .soft-services {
        background-color: #ffe599;
        text-align: center;
    }

    .repair-activities {
        background-color: #ffe599;
        text-align: center;
    }

    .section-title {
        text-align: center;
        font-size: 1.2em;
        background-color: #d9d9d9;
        padding: 10px;
        border: 1px solid #000;
    }

    .form-container span {
        margin-left: 10px;
        font-weight: 600;
    }

    .AuditImage {
        width: 100px !important;
        height: 100px !important;
    }
</style>
<link rel="stylesheet" href="~/css/myStyleSheet.css" />

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0/dist/css/select2.min.css" rel="stylesheet" />
<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 font-weight-bold text-primary "> Electrical Health Checkup Report </h6>
        </div>
        <div class="card-body">
            <div class="row m-2" id="ListView">
                <input type="hidden" id="txttype" value="Value Added Service" />
                <input type="hidden" id="txttypesub" value="Electrical Health Checkup Report" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Customer Name</label>
                        <select class="form-control" id="Customer" onchange="BindSite()">

                            <option value="0">All</option>
                            @if (ViewBag.cust != null)
                            {
                                foreach (var e in ViewBag.cust as List<SelectListItem>)
                                {
                                    <option value="@e.Value">@e.Text</option>
                                }
                            }

                        </select>

                    </div>

                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Site Name</label>
                        <select class="form-control" id="Site">

                            <option value="0">All</option>
                            @if (ViewBag.site != null)
                            {
                                foreach (var e in ViewBag.site as List<SelectListItem>)
                                {
                                    <option value="@e.Value">@e.Text</option>
                                }
                            }

                        </select>

                    </div>

                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label>From Date</label>
                        <input type="date" class="form-control" id="fromdate" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>To Date</label>
                        <input type="date" class="form-control" id="todate" />
                    </div>
                </div>


                <div class="col-2">
                    <label></label>
                    <button class="btn btn-primary" onclick="showList('Repair & Maintenance Activities')">View</button>
                </div>



                <table class="audit-table">
                    <thead>
                        <tr>

                            <th>Customer Name</th>
                            <th>Site Name</th>
                            <th>Date of Visit</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody id="listbody"></tbody>
                </table>
            </div>
        </div>

        <div class="row m-2">

            <div class="form-container d-none" id="DivContainer">
                <button class="btn btn-primary m-2 printhide" onclick="Back()">Back</button>
                <button class="btn btn-primary m-2 printhide" onclick="ExportPdf()">Export PDF</button>
                <table class="info-table">
                    <tr>
                        <th style="background:#c84143;text-align:left" colspan="3">
                            Customer Details
                        </th>
                    </tr>
                    <tr>
                        <td colspan="2">
                            Customer Name
                            <span id="CustomerName"></span>
                        </td>
                        <td>
                            Site Name
                            <span id="site"></span>
                        </td>
                    </tr>
                    <tr>
                        <th style="background:#c84143;text-align:left" colspan="3">
                            Job Allotment Details
                        </th>
                    </tr>
                    <tr>
                        <td>
                            Technician Name
                            <span id="Technician"></span>
                        </td>
                        <td>
                            Designation
                            <span id="Designation"></span>
                        </td>
                        <td>
                            Date of Visit
                            <span id="DateofVisit"></span>
                        </td>
                    </tr>
                </table>

                <table class="audit-table">
                    <thead>
                        <tr>
                            <th colspan="5" style="background:#c84143;text-align:center;" class="soft-services text-center">Electrical Health Checkup Report</th>

                        </tr>
                        <tr>
                            <th>S/No</th>
                            <th>Check Point Name</th>
                            <th>Value</th>
                            <th>Tech Remarks</th>
                            <th>Photo</th>

                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>


            </div>








        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js"></script>
<script defer src="~/js/RnMReport/ValueAddedService.js" asp-append-version="true"></script>
<script defer src="~/js/Master.js"></script>
<script type="text/javascript">
    $("#Customer").select2();
    $("#Site").select2();


</script>






