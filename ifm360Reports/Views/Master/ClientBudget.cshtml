@{
    ViewData["Title"] = "ClientBudget";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}

<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">Client Budget</h6>
        </div>
        <div class="card-body">
            <div class="row">
              <input hidden id="HidId" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <select id="ddlClient" class="form-control" onchange="bindsitetoclient()">
                            <option value="0">select</option>
                            @if (ViewBag.client != null)
                            {
                                foreach (var item in ViewBag.client)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <label for="ddlClient">Client</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <select id="ddlSite" class="form-control" onchange="Showdata()">
                            <option value="0">select</option>
                           
                        </select>
                        <label for="ddlSite">Site</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="txtAmt">Enter Amount</label>
                        <input id="txtAmt" oninput="checkAmt(this)" name="Amount" title="Enter a valid amount (e.g. 100 or 100.50)" type="text" class="form-control mandatory" />
                    </div>
                </div>            
               
                <div class="col-md-2">
                    <button class="btn btn-primary" id="btnsave" onclick="SaveData()">Save</button>
                </div>
               
            </div>
            <div class="row">
                <div class="col-12">
                    <div id="printDiv"></div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
