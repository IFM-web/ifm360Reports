@{
    ViewData["Title"] = "Email Master";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}


<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">Email Master</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <input hidden id="HidId" value="0" />
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="txtEmpId">EmpId</label>
                        <input type="text" id="txtEmpId" name="EmpId" class="form-control mandatory" />

                    </div>
                </div>
            
           
                <div class="col-md-4">
                    <div class="form-group">
                        <label>EmpName</label>
                        <input type="text" id="txtEmpName" name="Emp Name" class="form-control mandatory" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>EmpEmail</label>
                    <input type="email" id="txtemailId" name="Emp Email" class="form-control mandatory" />
                    </div>
                </div>
               
                <div class="col-md-4">
                    <button type="button" onclick="SaveData()" class="btn btn-danger" id="btn">Submit</button>
                    <button type="button" onclick="exportexcel()" class="btn btn-danger" id="btn">Export To Excel</button>
                
                </div>

            </div>
            <div class="row mt-4">
                <div class="col-12 overflow-auto">
                    <div id="printDiv"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="~/js/Master/EmailMaster.js" asp-append-version="true"></script>
<script src="~/js/Master.js"></script>
<script src="~/js/InsAjax.js"></script>