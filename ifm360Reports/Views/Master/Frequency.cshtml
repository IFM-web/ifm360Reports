@{
    ViewData["Title"] = "Frequency Master";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}


<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">Frequency Master</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <input hidden id="HidId" value="0" />
                    <div class="col-md-4">
                    <div class="form-group">
                        <label for="ddlUser">Client</label>
                        <select id="ddlClient" class="form-control mandatory" onchange="Showdata()" name="Client">
                            <option value="0">Select</option>
                            @if (ViewBag.Client != null)
                            {
                                foreach (var item in ViewBag.Client)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        
                    </div>
                </div>
            </div>
            <div class="row" id="rowId">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Frequency Name</label>
                        <input type="text" id="txtFrequency" name="Frequency Name" class="form-control mandatory" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>From Time</label>
                        <input type="time" id="startTime" name="From Time" step="60" min="00:00" max="23:59" class="form-control mandatory" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>To Time</label>
                        <input type="time" id="endTime" name="To Time" class="form-control mandatory" />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="button" id="btnsave" onclick="SaveData()" class="btn btn-danger" id="btn">Submit</button>
                </div>

            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <div id="printDiv"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script src="~/js/Master/Frequency.js" asp-append-version="true"></script>
<script src="~/js/Master.js"></script>
<script src="~/js/InsAjax.js"></script>