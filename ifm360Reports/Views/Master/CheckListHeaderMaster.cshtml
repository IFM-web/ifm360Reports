@{
    ViewData["Title"] = "CheckListHeaderMaster";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}

<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">Check List Header Master</h6>
            <input type="hidden" id="txtAutoId" value="0"/>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <select id="ddlClient" name="Client Name" class="form-control mandatory" onchange="showGrid()">
                            <option value="0">Select</option>
                            @if (ViewBag.Client != null)
                            {
                                foreach (var item in ViewBag.Client)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <label for="ddlClient">Client</label>
                    </div>
                </div>
           
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Check List Header</label>
                        <input type="text" name="Check List Header" id="txtCheckListHeader" class="form-control mandatory" />
                    </div>
                </div>              
                <div class="col-md-2">
                    <button type="button" class="btn btn-primary" id="btn" onclick="addCheckListHeader()">Submit</button>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div id="PrintDiv"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<script src="~/js/Master.js"></script>
<script src="~/js/InsAjax.js"></script>
<script src="~/js/master/checklistheadermaster.js" asp-append-version="true"></script>