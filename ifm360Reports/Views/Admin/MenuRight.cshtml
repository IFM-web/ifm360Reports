@{
    ViewData["Title"] = "MenuRight";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}

<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">Menu Right</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <select id="ddlUser" class="form-control" onchange="show()">
                            <option value="0">Select</option>
                            @if (ViewBag.User != null)
                            {
                                foreach (var item in ViewBag.User)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <label for="ddlUser">User</label>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <select id="ddlParent" class="form-control" onchange="show()">
                            <option value="0">Select</option>
                            @if (ViewBag.MenuParent != null)
                            {
                                foreach (var item in ViewBag.MenuParent)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <label for="ddlParent">Parent</label>
                    </div>
                </div>
                <div class="col-md-2">
                    <button id="btnsave" type="button" onclick="save()" class="btn btn-danger ">Save</button>
                </div>
                <div class="col-12">
                    <div id="PrintDiv"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<script src="~/js/Admin/menuright.js" asp-append-version="true"></script>
<script src="~/js/Master.js"></script>
<script src="~/js/InsAjax.js"></script>
<script src="~/js/xlxs.full.min.js"></script>

