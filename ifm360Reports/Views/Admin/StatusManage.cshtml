@{
    ViewData["Title"] = "StatusManage";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}

<div class=" container-fluid" id="bdy">
    <input type="hidden" name="name" id="Type" value="@ViewBag.Id" />
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
            <h6 id="header" class="m-0 pl-1 font-weight-bold text-primary ">@ViewBag.Type</h6>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-4 divforemp" style="display:none">
                    <div class="form-group">
                        <label for="">Region</label>
                        <select id="Region" onchange="bindbranch()" class="form-control">
                            <option value="0">select</option>
                            @if (ViewBag.Region != null)
                            {
                                foreach (var item in ViewBag.Region)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>

                    </div>
                </div>
                <div class="col-md-4 divforemp" style="display:none">
                    <div class="form-group">
                        <label for="ddlClient">Branch</label>
                        <select id="BranchId" onchange="show()" class="form-control">
                            <option value="0">select</option>

                        </select>

                    </div>
                </div>
                <div class="col-md-4 divforemp" style="display:none">
                    <div class="form-group">
                        <label for="ddlClient">IsActive</label>
                        <select id="isactive" onchange="show()" class="form-control">
                            <option value="3">All</option>
                            <option value="0">InActive</option>
                            <option value="1">Active</option>


                        </select>

                    </div>
                </div>


                <div class="col-md-4" id="Divforsite" style="display:none">
                    <div class="form-group">
                        <select id="ddlClient" onchange="show()" class="form-control">
                            <option value="0">select</option>
                            @if (ViewBag.Customer != null)
                            {
                                foreach (var item in ViewBag.Customer)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <label for="ddlClient">Client</label>
                    </div>
                </div>

                <div class="col-md-2">
                    @* <button class="btn btn-primary" onclick="show()">View</button>  *@
                    <button class="btn btn-primary btnsave d-none" onclick="save()">Save</button>
                </div>

            </div>
            <div class="row">
                <div class="col-12">
                    <div id="PrintDiv"></div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<script src="~/js/Admin/SiteandEmployee.js" asp-append-version="true"></script>
<script src="~/js/Master.js"></script>
<script src="~/js/InsAjax.js"></script>
<script src="~/js/xlxs.full.min.js"></script>

