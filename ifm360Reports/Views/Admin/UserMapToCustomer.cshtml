
@{
    ViewData["Title"] = "User Map To Customer";
    Layout = "~/Views/Shared/_MainLayout1.cshtml";
}


<div class=" container-fluid" id="bdy">
    <div class="card shadow mt-4" style="">
        <div class="card-header py-3">
           
            <h6 id="header" class="m-0 font-weight-bold text-primary ">User Map To Customer</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <input type="hidden" id="txtHiddenId" value="0" />

                <div class="col-md-3">
                    <div class="from-group">
                        <label>User</label>
                        <select class="form-control" id="Userselect">
                            <option value="0">Select</option>
                            @foreach (var e in ViewBag.User as List<SelectListItem>)
                            {
                                <option value="@e.Value">@e.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="from-group">
                        <label>Company</label>
                        <select class="form-control" id="Company" onchange="BindCustomer()">
                        <option value="0">Select</option>
                            @foreach (var e in ViewBag.Company as List<SelectListItem>)
                            {
                                <option value="@e.Value">@e.Text</option>
                            }
                        </select>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="from-group">
                        <label>Customer</label>
                        <div class="custom-multiselect w-100 position-relative">
                            <input type="hidden" class="form-control " id="customSelect">
                            <input type="text" Name="Branch" class="form-control mandatory" id="customSelectName" placeholder="Select..." readonly>

                            <div class="custom-multiselect-menu border rounded bg-white position-absolute mt-1 w-100" id="checkboxContainer" style="display: none; max-height: 300px; overflow-y: auto;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2 ">
               
                </div>

            </div>
            <button class="btn btn-primary px-4  p-2 mt-4" onclick="SaveData()">Save</button>

            
                <div id="printdiv"></div>
           

        </div>
        
    </div>
    
</div>
