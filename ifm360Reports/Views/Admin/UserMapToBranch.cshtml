                        <label>User</label>
                        <select class="form-control mandatory" name="User" id="Userselect" onchange="SHowData()">
                            <option value="0">Select</option>
                            @foreach (var e in ViewBag.User as List<SelectListItem>)
                            {
                                <option value="@e.Value">@e.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Company</label>
                        <select class="form-control mandatory" name="Company" id="Company" onchange="bindRegion()">
                            <option value="0">Select</option>
                            @foreach (var e in ViewBag.Company as List<SelectListItem>)
                            {
                                <option value="@e.Value">@e.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Region</label>
                        <select class="form-control mandatory" name="Region" id="Region" onchange="bindbranch()">
                            <option value="0">Select</option>
                            
